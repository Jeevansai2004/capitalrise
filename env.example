# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS and referral links)
CLIENT_URL=http://localhost:3000

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
# For local development:
DB_PATH=./database/capital_rise.db

# For MongoDB Atlas (production):
MONGO_URI=mongodb+srv://capitalrise_user:your_password@cluster0.mongodb.net/capital_rise?retryWrites=true&w=majority
MONGO_DB=capital_rise

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Default Credentials (change in production)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@capitalrise.com
ADMIN_PASSWORD=admin123

# Security
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key

# Logging
LOG_LEVEL=info

# Twilio Messaging Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_WHATSAPP_NUMBER=your_twilio_whatsapp_number 